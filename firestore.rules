rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write access for all authenticated users.
    // This is a permissive rule suitable for development.
    // For production, you should implement more granular, role-based security rules.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
