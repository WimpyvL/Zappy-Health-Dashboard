rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Deny all reads and writes by default for Cloud Storage.
    // You must explicitly grant access based on your app's needs.
    // For example, to allow authenticated users to write to a 'user-uploads' folder:
    // match /user-uploads/{userId}/{fileName} {
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
